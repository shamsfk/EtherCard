  "homepage": "https://github.com/shamsfk/EtherCard#readme",
  "dependencies": {
    "ganache-cli": "^6.1.0",
    "mocha": "^5.0.4",
    "solc": "^0.4.21",
    "truffle-hdwallet-provider": "0.0.3",
    "web3": "^1.0.0-beta.26",
    "vue": "^2.4.2"
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
